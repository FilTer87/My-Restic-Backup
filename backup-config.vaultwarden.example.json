{
    "restic-repo": "/path/to/restic-repository",
    "log-path": "/var/log/restic-backups",
    "secrets-method": "vaultwarden",
    "vaultwarden-item": "Restic Backup Password",
    "vaultwarden-session-file": "/root/.bw-session",
    "docker-apps": [
        {
            "name": "app-name",
            "path": "/path/to/docker-compose-app",
            "additional-paths": [
                "/path/to/additional/data"
            ],
            "start_cmd": "docker#compose#up#-d",
            "stop_cmd": "docker#compose#down"
        },
        {
            "name": "postgres-backup",
            "path": "/path/to/db-backups",
            "bkp_cmd": "docker#exec#postgres-container#pg_dump#-U#postgres#dbname#>#database.sql"
        }
    ],
    "additional-backups": [
        {
            "name": "backup-name",
            "path": "/path/to/backup"
        }
    ]
}
